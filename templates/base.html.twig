<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('build/app.css') }}">
		<script src="{{ asset('build/app.js') }}" defer></script>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container-fluid">
					<a class="navbar-brand" href="http://127.0.0.1:8000/main">BlogSpot</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" href="{ path(#about) }">À propos</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{ path(#contact) }">Contact</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
            <div class="container px-4 text-center">
			<h1 class="fw-bolder">BlogSpot</h1>
			<p class="lead">
				Chacun son Blog, son espace
			</p>
			<a class="btn btn-lg btn-light" href="register">S'inscrire</a>
			<a class="btn btn-lg btn-light" href="login">Se connecter</a>
		</div>
		</header>

		<main class="container my-4"> {% block body %}{% endblock %}
			</main>

			<footer class="bg-dark text-light text-center py-3">
				<p>2024 Mon Site. Tous droits réservés.</p>
			</footer>
		</body>
	</html>
